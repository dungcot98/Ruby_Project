<div class="card">
    <div class="card-body">
        <div class="row align-items-center">
        <div class="col">
            <h6 class="card-title text-uppercase text-muted mb-2">
            User
            </h6>
            <%= link_to @test.user.name,  admin_user_path(@test.user), class: "h3" %>
            <!-- Title -->
            <h6 class="card-title text-uppercase text-muted mb-2">
            Score
            </h6>
            <div class="row align-items-center no-gutters">
            <div class="col-auto">
                <!-- Heading -->
                <span class="h2 mr-2 mb-0">
                <%= test.score %>/20
                </span>                    
            </div>
            <div class="col">                       
                <!-- Progress -->
                <div class="progress progress-sm">
                <div class="progress-bar" role="progressbar" style="width: <%= test.score/0.2 %>%" aria-valuenow="<%= test.score/0.2 %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            </div> <!-- / .row -->
        </div>
        <div class="col-auto">                
            <!-- Icon -->
            <span class="h2 fe fe-clipboard text-muted mb-0"></span>
        </div>
        </div> <!-- / .row -->
    </div>
    </div>
    <div class="card mt-2">
    <div class="card-body">
        <div class="row align-items-center">
        <div class="col">
            <!-- Title -->
            <h6 class="card-title text-uppercase text-muted mb-2">
            Category
            </h6>
            <div class="row align-items-center no-gutters">
            <div class="col-auto">
                <!-- Heading -->
                <span class="h2 mr-2 mb-0">
                <%= link_to test.category.name, learn_path(test.category), style: "text-decoration:none" %><br>
                </span>                    
            </div>
            </div> <!-- / .row -->
        </div>
        <% if !defined?(show_tested_time).nil? && show_tested_time %>
        <div class="col">
            <!-- Title -->
            <h6 class="card-title text-uppercase text-muted mb-2">
            Tested Time
            </h6>
            <div class="row align-items-center no-gutters">
                <div class="col-auto">
                    <!-- Heading -->
                    <span class="h2 mr-2 mb-0">
                    <%= test.created_at %>
                    </span>                    
                </div>
            </div> <!-- / .row -->
        </div>
        <% end %>
        </div> <!-- / .row -->
    </div>
</div>