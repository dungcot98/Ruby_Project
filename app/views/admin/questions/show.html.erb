<% provide(:title, 'Show Question') %>
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-9 col-md-6">
            <h3>Infomation</h3>
            <div class="mt-3">
              <strong>Category:</strong>
              <%= link_to @question.category.name, admin_question_path(@question.category) %>
            </div>

            <div class="mt-3 mb-3">
              <strong>Question content:</strong>
              <%= @question.question_content %>
            </div>

            <div class="mt-3 mb-3">
              <strong>Answers:</strong><br />
              <% @question.answers.each_with_index do |ans, index| %>
              <span class="ml-2"><%= index + 1 %>. <%= link_to ans.answer_content, admin_answer_path(ans) %></span><br />
              <% end %>
              <% if @question.answers.count < 4 %>
                <%= link_to "Create new Answer", new_admin_answer_path() + "?question_id=#{@question.id}" %>
              <% end %>
            </div>

            <td>
                <%= link_to 'Edit', edit_admin_question_path(@question), :class => "btn btn-outline-info" %> 
                <%= link_to 'Back', admin_questions_path, :class => "btn btn-outline-warning" %>
            </td>
        </div>
    </div>
</div>
