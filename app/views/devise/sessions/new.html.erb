<% provide(:title, 'Login') %>
<div class="row d-flex justify-content-center">
  <div class="col-sm-6 col-lg-4 p-4">
    <h1 class="h1 mt-5">Login</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= form_with model: @user, class: "form mt-5", local: true, url: login_path  do |f| %>   
      <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", required: true, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group">
      <%= f.check_box :remember_me, type: "checkbox"%>
      <%= f.label :remember_me %>
      </div>
      <% end %>

      <%= f.submit "Login", class: "btn btn-outline-primary btn-lg btn-block" %>
    <% end %>
    <div class="mt-3">
       <%= render "devise/shared/links" %>
    </div>
  </div>
  
</div>
